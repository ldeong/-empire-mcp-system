{
  "name": "sina-empire-mcp-system",
  "version": "1.0.0",
  "description": "Comprehensive MCP ecosystem for unlimited scaling of Claude API calls into Cloudflare Workers",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node test-mcp-ecosystem.js",
    "test:unit": "jest",
    "setup": "node scripts/setup.js",
    "lint": "eslint *.js scripts/*.js",
    "format": "prettier --write *.js scripts/*.js",
    "auto:status": "node autonomous-engine.js status",
    "auto:add-revenue": "node autonomous-engine.js add-revenue",
    "auto:reinvest:evaluate": "node autonomous-engine.js reinvest:evaluate",
    "auto:reinvest:execute": "node autonomous-engine.js reinvest:execute",
    "cron:status": "node -e 'require(\"./cron-scheduler\").getScheduler().getStats() && console.log(require(\"./cron-scheduler\").getScheduler().getStats())'"
  },
  "keywords": [
    "mcp",
    "claude",
    "cloudflare",
    "api",
    "scaling",
    "resilience",
    "orchestration"
  ],
  "author": "SINA Empire",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "bip32": "^5.0.0-rc.0",
    "bip39": "^3.1.0",
    "bitcoinjs-lib": "^6.1.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "node-cron": "^3.0.3",
    "tiny-secp256k1": "^2.2.4",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sina-empire/mcp-system.git"
  },
  "bugs": {
    "url": "https://github.com/sina-empire/mcp-system/issues"
  },
  "homepage": "https://github.com/sina-empire/mcp-system#readme"
}
